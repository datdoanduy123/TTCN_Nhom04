<h2 class="mb-4">Thêm danh mục</h2>
<form action="" method="post">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td><strong>Tên danh mục</strong><sup class="required">(*)</sup></td>
                <td><input type="text" name="name" id="name" class="w300 form-control" required /></td>
            </tr>
            
            <tr>
                <td><strong>Mô tả</strong></td>
                <td><textarea name="description" id="description" class="w300 form-control"></textarea></td>
            </tr>
            
            <tr>
                <td colspan="2" class="text-center">
                    <input name="submit_category" type="submit" value="{LANG.save}" class="btn btn-primary w100" />
                </td>
            </tr>
        </tbody>
    </table>
</form>
<!-- END: main -->
